<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.w.song.widget.scroll.SlidePageView
        android:id="@+id/welcome_slidePageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/whatsnew_00" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/whatsnew_01" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/whatsnew_02" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/whatsnew_03"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/welcome_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="#ffffff"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp">
            </TextView>
        </LinearLayout>
    </cn.w.song.widget.scroll.SlidePageView>
</LinearLayout>